<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="" Height="300" Width="300">
    <Grid HorizontalAlignment="Left" Height="272" Margin="0,0,0,-3" VerticalAlignment="Top" Width="290">
        <Label Content="Choose language" HorizontalAlignment="Left" Height="27" Margin="51,41,0,0" VerticalAlignment="Top" Width="125"/>
        <RadioButton x:Name="EnglishRadioButton" Content="English" HorizontalAlignment="Left" Margin="75,86,0,0" VerticalAlignment="Top" Checked="EnglishRadioButton_Checked"/>
        <RadioButton x:Name="RussianRadioButton" Content="Russian" HorizontalAlignment="Left" Margin="75,126,0,0" VerticalAlignment="Top" Checked="RussianRadioButton_Checked"/>
        <RadioButton x:Name="UkrainianRadioButton" Content="Ukrainian" HorizontalAlignment="Left" Margin="75,164,0,0" VerticalAlignment="Top" Checked="UkrainianRadioButton_Checked"/>
    </Grid>
</Window>